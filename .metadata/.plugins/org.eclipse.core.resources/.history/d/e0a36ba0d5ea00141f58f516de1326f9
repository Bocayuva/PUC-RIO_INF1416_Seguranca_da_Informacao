package main.java;

import javax.swing.BoxLayout;

public class MenuPrincipal extends JPanel {

	/**
	 * 
	 */
	private JFrame frame;
	private Usuario usuario;
	protected JPanel allPane;
		
	public TelaInicial(Usuario fusuario, JFrame fframe){
						
		usuario = fusuario;
		frame   = fframe;
		
		montaTela();

	}
	
	public void montaTela() {
		
		frame.setBounds(100,100,500, 500);
		frame.getContentPane().removeAll();		
		
		allPane = new JPanel();
		frame.setContentPane(allPane);
		
		montaCabecalho();
		montaCorpo1();
				
		rebuildFrame();
		
	}

	private void montaCabecalho() {
		JPanel cabecalho = new JPanel();
		cabecalho.setBounds(10, 12, 501, 91);
		cabecalho.setLayout(null);
		
		JLabel lbLogin = new JLabel("Login: " + usuario.getLogin_name());
		lbLogin.setBounds(12, 12, 469, 15);
		cabecalho.add(lbLogin);
		
		Grupo grUsuario = Grupo.buscar(usuario.getUser_group_fk());
		allPane.setLayout(null);
		
		JLabel lbGrupo = new JLabel("Grupo: " + grUsuario.getGrupo_name());
		lbGrupo.setBounds(12, 39, 469, 15);
		cabecalho.add(lbGrupo);
		
		JLabel lbDescUsuario = new JLabel("Descrição do usuário: " + usuario.getUser_name());
		lbDescUsuario.setBounds(12, 66, 469, 15);
		cabecalho.add(lbDescUsuario);
		
		allPane.add(cabecalho);		
		
	}
	
	private void montaCorpo1() {
		JPanel corpo1 = new JPanel();
		corpo1.setLocation(10, 113);
		corpo1.setSize(501, 44);
		corpo1.setLayout(null);
		
		JLabel lbTotalAcessos = new JLabel("Total de acessos do usuário: ");
		lbTotalAcessos.setBounds(12, 12, 209, 15);
		corpo1.add(lbTotalAcessos);
		
		allPane.add(corpo1);
	}
	
	private void rebuildFrame(){
		frame.revalidate();
		frame.repaint();
	}
}
