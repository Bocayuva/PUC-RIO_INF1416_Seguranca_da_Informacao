package main.java;

import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;

import main.business.Usuario;
import javax.swing.BoxLayout;
import java.awt.FlowLayout;
import javax.swing.JDesktopPane;

public class TelaInicial extends JPanel {

	private JFrame frame;
	private Usuario usuario;
	private JPanel panel;
		
	public TelaInicial(Usuario fusuario, JFrame fframe){
		frame.setLayout(new FlowLayout(FlowLayout.CENTER, 5, 5));
		
		JDesktopPane desktopPane = new JDesktopPane();
		add(desktopPane);
		usuario = fusuario;
		frame   = fframe;
		frame.setBounds(100,100,650,650);
	}
	
	public void montaTela() {
		
		frame.getContentPane().removeAll();		
		
		panel = new JPanel();
		frame.getContentPane().add(panel, BorderLayout.CENTER);
		
		montaCabecalho();
		montaCorpo1();
		montaCorpo2();
				
		rebuildFrame();
		
	}

	private void montaCabecalho() {
		
	}
	
	private void montaCorpo1() {
		
	}

	private void montaCorpo2() {
		
	}
	
	private void rebuildFrame(){
		frame.revalidate();
		frame.repaint();
	}

}
